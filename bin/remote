#!/bin/bash
set -e

if [ -z "$REMOTE_WORKSPACE" ] && [ -z "$REMOTE_WORKSPACE_FILE" ]; then
  echo Set env REMOTE_WORKSPACE 1>&2
  exit 1
fi

if [ -z "$REMOTE_WORKSPACE" ]; then
  REMOTE_WORKSPACE=$(cat "$REMOTE_WORKSPACE_FILE")
fi

PWD_REL=$(echo $(pwd) | sed -e s:$HOME:~:)
CMD="cd $PWD_REL"

if [ $# -eq 0 ]; then
  CMD="$CMD && bash"
else
  CMD="$CMD && $*"
fi

exec ssh $REMOTE_WORKSPACE -t "$CMD"
